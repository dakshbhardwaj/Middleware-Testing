CREATE TABLE `interntask2`.`user` (
  `pid` INT NOT NULL AUTO_INCREMENT,
  `address_id` VARCHAR(45) NULL,
  `media_id` VARCHAR(45) NULL,
  `name` VARCHAR(45) NULL,
  `email` VARCHAR(45) NULL,
  `phone` VARCHAR(45) NULL,
  `pic_url` VARCHAR(100) NULL,
  PRIMARY KEY (`pid`),
  UNIQUE INDEX `pid_UNIQUE` (`pid` ASC));


  CREATE TABLE `interntask2`.`address` (
  `address_id` INT NOT NULL,
  `street` VARCHAR(45) NULL,
  `city` VARCHAR(45) NULL,
  `pincode` VARCHAR(45) NULL,
  `state` VARCHAR(45) NULL,
  PRIMARY KEY (`address_id`));

  CREATE TABLE `interntask2`.`media` (
  `media_id` INT NOT NULL AUTO_INCREMENT,
  `fname` VARCHAR(45) NULL,
  `size` VARCHAR(45) NULL,
  `pic_url` VARCHAR(100) NULL,
  PRIMARY KEY (`media_id`));


  create table users(pid int(10) primary key,
  address_id int(11),media_id int(11),
  name varchar(50),email varchar(50),
  mobile varchar(50),
  pic_url varchar(100));


create table address(address_id int primary key,
street varchar(50),city varchar(50),
pincode varchar(50),state varchar(50),
foreign key(address_id) references user(address_id));

ALTER TABLE `interntask2`.`users`
ADD INDEX `address_for_idx` (`address_id` ASC);
ALTER TABLE `interntask2`.`users`
ADD CONSTRAINT `address_for`
  FOREIGN KEY (`address_id`)
  REFERENCES `interntask2usersaddress_for`.`address` (`address_id`)
  ON DELETE CASCADE
  ON UPDATE CASCADE;
